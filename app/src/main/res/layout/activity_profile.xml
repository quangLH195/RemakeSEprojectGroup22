<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/background_camera">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_profile"
        android:layout_below="@id/tv_cameras"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_cameras"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Tap camera to choose profile picture"
        />
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_cameras"
        android:id="@+id/img_cameras"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/camera2"
        android:layout_gravity="center"
        android:layout_margin="30dp"/>
    <EditText
        android:layout_below="@id/img_cameras"
        android:id="@+id/edt_name_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="First, enter your profile name"
        android:textColorHint="#FF6C02"
        android:paddingLeft="20dp"
        />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edt_name_profile"
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/background_button"
        android:textColor="@color/colorPrimary"
        android:text="Save"
        android:textSize="20sp"/>
</RelativeLayout>